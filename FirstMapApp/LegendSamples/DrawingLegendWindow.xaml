<Window x:Class="FirstMapApp.DrawingLegendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:maptor="clr-namespace:IRI.Maptor.Jab.Controls.View;assembly=IRI.Maptor.Jab.Controls"  
        Loaded="Window_Loaded" Title="Sample Maptor App" Height="700" Width="900" FlowDirection="{Binding CurrentFlowDirection}">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource flatButtonPrimary}">
            <Setter Property="Margin" Value="4"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="2">
            <StackPanel Orientation="Horizontal" >
                <maptor:LanguageCombo HorizontalAlignment="Right"/>
                <Button Content="{Binding ClearText}" Command="{Binding ClearAllCommand}"/>
                <Button Content="{Binding DrawPointText}" Command="{Binding DrawPointCommand}"/>
                <Button Content="{Binding DrawPolylineText}" Command="{Binding DrawPolylineCommand}"/>
                <Button Content="{Binding DrawPolygonText}" Command="{Binding DrawPolygonCommand}"/>
            </StackPanel>
        </Border>
        
        <Expander Grid.Row="1" Header="{Binding DrawingsText}" DockPanel.Dock="Top" IsExpanded="True"  Margin="0,1,0,0" Cursor="Hand">
            <maptor:MapDrawingLegendView MinHeight="90"/>
        </Expander>
        
        <maptor:MapViewer Grid.Row="1" Grid.Column="1" x:Name="map" BorderBrush="Black" BorderThickness="1"/>
        <maptor:MapInfoView Grid.Row="1" Grid.Column="1" DataContext="{Binding }"/>
        
    </Grid>
</Window>
